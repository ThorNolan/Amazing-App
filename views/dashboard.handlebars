<div class="row">
  <div class="col s12 m6 offset-m6 l6 offset-l6">
    <section class="tasks">
      <h4 class="white-text shadow text-darken-4">Event Tasks <i class="fas fa-tasks"></i></h4>
      <p>Organize the big day by listing out your tasks. </p>
  </div>
</div>
<div class="row">
  <div class="col s10 m2 l6 "> </div>
  <div class="col s10 m5 l3 ">
    <button id="openTask" data-target="task" class="btn ">View Open Tasks</button>
    <h4>Open Tasks</h4>
    <div>
      <ul>
        {{#each tasks}}
        {{#unless complete}}
        {{taskName}}
        {{/unless}}
        <button id="completedTask" class="completed">Completed </button>
        <button class=".delTask ">Delete </button>
        {{/each}}
      </ul>
    </div>
    </section>
  </div>
  <div class="col s10 m5 l3 ">
    <button id="completedTask" data-target="task" class="btn ">View Completed Tasks</button>
    <div class="entry">
      <h4>Closed Tasks</h4>
      <ul>
        {{#each tasks}}
        {{#if complete}}
        {{taskName}}
        {{/if}}
        <button class=".reopen">Reopen</button>
        <button class=".delTask">Delete </button>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 l6 "></div>
  <div class="col s12 m6 offset-m3 l6 ">
    <button id="createTask" data-target="modal1" class="btn modal-trigger">Create Task</button>
    <div id="taskForm">
      <form class="col s12">
        <div class="row">

          <p>Add a new Task</p>
          <div class="input-field col s6">
            <input placeholder="Task Name" id="newTask" type="text" class="validate">
            <label for="task_name">Task Name</label>
          </div>
          <button id="submitNewTask" data-target="modal1" class="btn modal-trigger">Submit Task</button>

      </form>
    </div>
    </section>
  </div>
</div>
