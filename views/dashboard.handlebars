  <div class="col s12 m6 offset-m6 l6 ">
    <section class="objective">
      <h4 class="white-text shadow text-darken-4">Your Events!</h4>
      <button id="viewEvents" data-target="" class="btn ">View Ongoing Events</button>
      <button id="viewPastEvents" data-target="" class="btn ">View Past Events</button>
      <button id="createEvent" data-target="modal1" class="btn modal-trigger">Create Event</button>
    </section>
  </div>
