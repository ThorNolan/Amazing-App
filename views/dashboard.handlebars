<div class="row">
  <div class="col s12  l3"></div>
  <div class="col s12 l6 ">
    <section class="objective eventArea">
      <h4 class="white-text shadow text-darken-4">Your Events!</h4>
      <button id="createEvent" data-target="modal1" class="btn modal-trigger">Create Event</button>
    </section>
  </div>
